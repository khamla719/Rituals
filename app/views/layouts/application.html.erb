<!DOCTYPE html>
<html>
<head>
  <title>Rituals</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href='https://fonts.googleapis.com/css?family=Tangerine' rel='stylesheet' type='text/css'>
  <link href='https://fonts.googleapis.com/css?family=La+Belle+Aurore' rel='stylesheet' type='text/css'>
  <meta name="viewport" content="width = 1050, user-scalable = no" />
<!--   // <script type="text/javascript" src="../../extras/jquery.min.1.7.js"></script>
  // <script type="text/javascript" src="../../extras/modernizr.2.5.3.min.js"></script> -->


    <!-- Animation CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/animatecss/3.5.1/animate.css">

    <!-- Custom Fonts -->
<!--     <link href="font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css"> -->
    <link href="http://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic" rel="stylesheet" type="text/css">
    <link href="http://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
        <![endif]-->

</head>
</head>
<body>
  <!-- Navigation -->
  <nav class="navbar navbar-custom navbar-fixed-top" role="navigation">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-main-collapse">
          <i class="fa fa-bars"></i>
        </button>
      </div>
      <div class="collapse navbar-collapse navbar-right navbar-main-collapse">
        <ul class="nav navbar-nav">

        <!-- Hidden li included to remove active class from login link when scrolled up past login section -->
          <% if @user.email %>
            <li class="hidden">
              <a href="#page-top"></a>
            <li>
              <%= link_to "Home", user_path(@user) %>
            </li>
            </li>
            <li class="center"> Memories <span class="badge"> <%= @memories.count %> </span>
            </li>
            <li>
              <a href="#" class="gray_text" role="button" data-toggle="modal" data-target="#new-memory-modal">Create a Memory</a>
            </li>
            <li>
              <a href="#" class="gray_text" role="button" data-toggle="modal" data-target="#family-modal">Family Members  <span class="badge"> <%= @user.families.count %> </span></a>
            </li>
            <li>
              <a href="#" class="gray_text" role="button" data-toggle="modal" data-target="#new-member-modal">Add A Family Member</a>
            </li>
            <li style="color:white">
              <%= link_to 'Logout', session_path(@user), method: :delete, data: { confirm: 'Are you sure?' }, :class => "gray_text" %>
            </li>
          <% else %>
            <li class="hidden">
              <a href="#page-top"></a>
            </li>
            <li>
              <a class="page-scroll" href="#login" style="text-transform: capitalize;">Login</a>
            </li>
            <li>
              <a class="page-scroll" href=".download-section" style="text-transform: capitalize;">Sign Up</a>
            </li>
          <% end %>
        </ul>
      </div>
    <!-- /.navbar-collapse -->
  </div>
  <!-- /.container -->
</nav>


      <!-- BEGIN # MODAL Create a Memory -->
      <div class="modal fade" id="new-memory-modal" tabindex="-1" role="dialog" aria labelledby="myModalLabel" aria-hidden="true" style="display: none;">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header" align="center">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
              </button>
            </div>

            <div id="div-forms">
              <form action="/users/<%= @user.id %>/memories" method="post" id="login-form">
                <div class="modal-body">
                  <div id="div-login-msg">
                  </div>
                  <div class="form-group">
                    <label for='login_username'>Title of Your Memory: </label>
                    <input class="form-control" type='text' name='memory[title]'>
                  </div>

                  <div class="form-group">
                    <label for='description'>URL of Image: </label>
                    <input class="form-control" type='text' name='memory[url]'>
                  </div>

                  <div class="form-group">
                    <label for='start_date'>Description: </label>
                    <input class="form-control" type='textarea' name='memory[description]'>
                  </div>
                  <div>
                    <label for='story'>Story: </label><br>
                    <textarea cols="50" rows="10" name="memory[story]" text-align="left"></textarea>
                    <br>
                    <label for="private?">Privacy: </label><br>
                    <input type="radio" name="memory[private]" value="true" checked> Private<br>
                    <input type="radio" name="memory[private]" value="false"> Public<br>
                  </div>
                </div>
                <div class="modal-footer">
                  <div>
                    <button type="submit" class="btn btn-primary btn-lg btn-block">Create Memory</button>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </body>





    <!-- BEGIN # MODAL Family -->
    <div class="modal fade" id="family-modal" tabindex="-1" role="dialog" aria labelledby="myModalLabel" aria-hidden="true" style="display: none;">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header" align="center">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
            </button>
          </div>

          <div id="div-forms">
            <h1> Your Family Members </h1>
            <ul id="all-member-list">
              <% @user.families.each do |family_member| %>
                <li><a href="<%=family_member.id%>"><%= family_member.first_name %></a></li>
              <%end%>
            </ul>
          </div>
        </div>
      </div>
    </div>


      <!-- BEGIN # MODAL Add Family Modal -->
    <div class="modal fade" id="new-member-modal" tabindex="-1" role="dialog" aria labelledby="myModalLabel" aria-hidden="true" style="display: none;">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header" align="center">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
            </button>
          </div>

          <div id="div-forms">
            <h1> Your Family Members By Email</h1>
            <form action="/users/<%= @user.id %>/memberships" method="post" id="new-membership-form">
                <div class="modal-body">
                  <div id="div-login-msg">
                  </div>
                  <div class="form-group">
                    <label for='login_username'>Users email: </label>
                    <input class="form-control" type='text' name='email'>
                  </div>
                </div>
                <div class="modal-footer">
                  <div>
                    <button type="submit" class="btn btn-primary btn-lg btn-block">Add to Family</button>
                  </div>
                </div>
              </form>

          </div>
        </div>
      </div>
    </div>
<%= yield %>
</body>
</html>
